<Window x:Class="SolutionGestionConsultations.WPFApp.InterfaceUtilisateur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolutionGestionConsultations.WPFApp.InterfaceUtilisateur"
        mc:Ignorable="d"
        Title="Système de gestion des consultations" Height="450" Width="800">
    <Grid Background="#F3F4F6">

        <!-- Barre de menu en haut de la fenêtre -->
        <Menu VerticalAlignment="Top" Background="#E0E0E0">
            <MenuItem Header="Gestion des Patients">
                <MenuItem Header="Ajouter un Patient"/>
                <MenuItem Header="Modifier un Patient"/>
                <MenuItem Header="Supprimer un Patient"/>
            </MenuItem>
            <MenuItem Header="Dossiers Médicaux"/>
            <MenuItem Header="Consultations"/>
            <MenuItem Header="Prescriptions"/>
            <MenuItem Header="Déconnexion"/>
        </Menu>

        <!-- Titre principal de l'application -->
        <TextBlock Text="Système de gestion des consultations" 
                FontSize="24" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0,50,0,0"/>

        <!-- Barre d'état -->
        <StatusBar VerticalAlignment="Bottom">
            <TextBlock Text="Prêt" Margin="10"/>
        </StatusBar>
    </Grid>
</Window>
